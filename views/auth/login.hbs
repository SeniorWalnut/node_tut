<div class="auth">
	<div class="row">
	  <div class="col s12">
	    <ul class="tabs">
	      <li class="tab col s6"><a class="active" href="#login">Login</a></li>
	      <li class="tab col s6"><a href="#register">Register</a></li>
	    </ul>
	  </div>
	  <div id="login" class="col s6 offset-s3">
			<form action="/add" method="POST">
				 <div class="input-field col s6">
			   	 <input name="email" placeholder="Placeholder" id="email" type="text" class="validate" required>
			     <label for="email">Your email:</label>
			      <span class="helper-text" data-error="Input the email"></span>
					</div>
			    <div class="input-field col s6">
			      <input name="price" required placeholder="Placeholder" id="price" type="number" class="validate" min="1">
			      <label for="price">Course Price</label>
			       <span class="helper-text" data-error="Input the price"></span>
			    </div>

			     <div class="input-field col s6">
			        <input name="img" required placeholder="Placeholder" id="image" type="text" class="validate">
			        <label for="image">Course Image</label>
			         <span class="helper-text" data-error="Input image url"></span>
			      </div>

			     <button class="btn btn-primary" type="submit">Add course</button>
			</form>
	  </div>
	  <div id="register" class="col s6 offset-s3">
		
	  </div>	
	</div>	
</div>