<h1>Add Courses</h1>

<form action="/add" method="POST">
	 <div class="input-field col s6">
   	 <input name="title" required placeholder="Placeholder" id="title" type="text" class="validate">
     <label for="title">Course name</label>
      <span class="helper-text" data-error="Input the name"></span>
		</div>
    <div class="input-field col s6">
      <input name="price" required placeholder="Placeholder" id="price" type="number" class="validate" min="1">
      <label for="price">Course Price</label>
       <span class="helper-text" data-error="Input the price"></span>
    </div>

     <div class="input-field col s6">
        <input name="img" required placeholder="Placeholder" id="image" type="text" class="validate">
        <label for="image">Course Image</label>
         <span class="helper-text" data-error="Input image url"></span>
      </div>

     <button class="btn btn-primary" type="submit">Add course</button>
</form>